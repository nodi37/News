---
import IArticle from "../interfaces/IArtcile";
import { shortenString } from "../utils/string.utlis";

interface Props {
  ordinalNumber: number;
  article: IArticle;
}

const { article, ordinalNumber } = Astro.props;
---

<a href={article.url} class="article">
  <img class="article__img" src={article.urlToImage} alt={'Image to article: ' + article.title} />
  <div>
    <span class="article__on">{String(ordinalNumber).padStart(2, "0")}</span>
    <h5 class="article__title">{article.title}</h5>
    <p class="article__dsc">{shortenString(article.description, 70)}</p>
  </div>
</a>

<style lang="scss">
  @import "../styles/_variables.scss";

  //Reset
  .article,
  .article:link,
  .article:visited {
    color: black;
    text-decoration: none;
    @media screen and (min-width: $bp-desktop) {
      box-shadow: $box-shadow;
    }
  }

  .article {
    height: 15rem;
    display: flex;
    gap: 2rem;
    overflow: scroll;

    &__img {
      height: 100%;
      width: 10rem;
      object-fit: cover;
    }

    &__on {
      display: block;
      margin-bottom: 0.2rem;
      color: $color-gray-light;
      font-size: 2.5rem;
      font-weight: 600;
    }

    &__title {
      margin-bottom: 1rem;
    }

    &__dsc {
      font-size: 1rem;
      color: $color-gray;
    }
  }
</style>
